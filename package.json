{
	"name": "nodejs-server-template",
	"version": "0.0.0",
	"private": true,
	"description": "Not-so-opinionated server template, with all the important stuff",
	"keywords": [
		"nodejs",
		"template",
		"nodejs-template",
		"iamnapo",
		"eslint",
		"fastify",
		"graphql",
		"sentry",
		"nodemon",
		"ava",
		"dotenv"
	],
	"homepage": "https://github.com/iamnapo/nodejs-server-template#readme",
	"bugs": {
		"url": "https://github.com/iamnapo/nodejs-server-template/issues"
	},
	"repository": "github:iamnapo/nodejs-server-template",
	"license": "MIT",
	"author": {
		"name": "Napoleon-Christos Oikonomou",
		"email": "Napoleonoikon@gmail.com",
		"url": "https://iamnapo.me"
	},
	"type": "module",
	"exports": "./server.js",
	"scripts": {
		"ava": "c8 ava",
		"dev": "nodemon server.js",
		"lint": "eslint . --ext .js --cache",
		"start": "cross-env NODE_ENV=production node server.js",
		"test": "npm run lint && npm run ava"
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development",
			"NODE_OPTIONS": "--trace-warnings"
		},
		"watch": [
			"src",
			"server.js"
		]
	},
	"prettier": "@iamnapo/prettier-config",
	"eslintConfig": {
		"extends": "iamnapo",
		"rules": {
			"import/no-unresolved": [
				"error",
				{
					"ignore": [
						"ava",
						"got"
					]
				}
			]
		}
	},
	"ava": {
		"verbose": true
	},
	"dependencies": {
		"@fastify/compress": "^6.2.0",
		"@fastify/cookie": "^8.3.0",
		"@fastify/cors": "^8.2.0",
		"@fastify/helmet": "^10.1.0",
		"@sentry/node": "^7.37.2",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"fastify": "^4.13.0",
		"fastify-plugin": "^4.5.0",
		"mercurius": "^12.0.1",
		"pino-pretty": "^9.2.0"
	},
	"devDependencies": {
		"@iamnapo/prettier-config": "^1.0.3",
		"ava": "^5.2.0",
		"c8": "^7.13.0",
		"eslint": "^8.34.0",
		"eslint-config-iamnapo": "^28.2.0",
		"file-type": "^18.2.0",
		"got": "^12.5.3",
		"nodemon": "^2.0.20"
	},
	"engines": {
		"node": ">=18"
	}
}
